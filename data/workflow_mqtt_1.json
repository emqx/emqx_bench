[
    {
        "workflow_id": "connection_only",
        "protocol": "mqtt",
        "server_uri":"127.0.0.1",
        "clients_info": {
            "data_acquisition_mode": "localfile",
            "file_path": "data/mqttclient_info.csv",
        },
        "work_flow": [
            {
                "task": "connect",
                "keepalive": 300
            },
            {
                "task": "sleep",
                "interval": 86400
            },
            {
                "task": "disconnect"
            }
        ]
    }
   ,
   {
       "workflow_id": "connection_and_publish",
       "protocol": "mqtt",
       "clientsInfo": {
           "data_acquisition_mode": "localfile",
           "file_path": "data/mqttclient_info.csv"
       },
       "work_flow": [
           {
               "task": "connect",
               "keepalive": 300
           },
           {
               "task": "pubish",
               "topic": "$1",
               "payload": "$2",
               "qos": "$3"
           },
           {
               "task": "sleep",
               "interval": 86400
           },
           {
               "task": "disconnect"
           }
       ]
   }
]