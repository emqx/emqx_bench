[
    {
        "workflow_id": "connection_only",
        "protocol": "mqtt",
        "clientsInfo": {
            "dataAcquisitionMode": "localfile",
            "filePath": "data/mqttclient_info.csv"
        },
        "work_flow": [
            {
                "task": "connect",
                "taskIndex": 1,
                "keepalive": 300
            },
            {
                "task": "sleep",
                "taskIndex": 3,
                "interval": 86400
            },
            {
                "task": "disconnect",
                "taskIndex": 4
            }
        ]
    },
    {
        "workflow_id": "connection_and_publish",
        "protocol": "mqtt",
        "clientsInfo": {
            "dataAcquisitionMode": "localfile",
            "filePath": "data/mqttclient_info.csv"
        },
        "work_flow": [
            {
                "task": "connect",
                "taskIndex": 1,
                "keepalive": 300
            },
            {
                "task": "pubish",
                "taskIndex": 2,
                "topic": "$1",
                "payload": "$2",
                "qos": "$3"
            },
            {
                "task": "sleep",
                "taskIndex": 3,
                "interval": 86400
            },
            {
                "task": "disconnect",
                "taskIndex": 4
            }
        ]
    }
]